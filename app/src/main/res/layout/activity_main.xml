<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/collapse_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:icon="@drawable/baseline_arrow_back_ios_48"
                app:iconGravity="textStart"
                android:layout_margin="12dp"
                tools:ignore="RtlSymmetry"
                >
            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dev_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/dev_info"
                android:layout_margin="12dp"
                tools:ignore="RtlSymmetry"
                app:icon="@drawable/baseline_developer_mode_48"
                app:iconGravity="textEnd"
                >
            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dev_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/man"
                android:layout_margin="12dp"
                tools:ignore="RtlSymmetry"
                app:icon="@drawable/baseline_info_48"
                app:iconGravity="textEnd"
                >
            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="12dp"
                tools:ignore="RtlSymmetry"
                app:icon="@drawable/baseline_text_snippet_48"
                app:iconGravity="textEnd"
                >
            </com.google.android.material.button.MaterialButton>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior = "@string/appbar_scrolling_view_behavior"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior = "@string/appbar_scrolling_view_behavior"
            android:paddingBottom="120dp"
            >
            <TextView
                android:id="@+id/state_semaphore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/semaphore"
                app:layout_constraintBottom_toBottomOf="@id/semaphore"
                android:text="@string/state"
                android:textSize="24sp"
                app:useMaterialThemeColors="true"
                android:layout_margin="12dp"
                >
            </TextView>
            <ImageView
                android:id="@+id/semaphore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/baseline_adjust_48"
                android:layout_margin="12dp"
                tools:ignore="RtlSymmetry"
                android:background="@android:color/transparent"
                android:contentDescription="@string/semaphore">
            </ImageView>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/semaphore"
                android:text="@string/route"
                android:textSize="24sp"
                app:useMaterialThemeColors="true"
                >
            </com.google.android.material.switchmaterial.SwitchMaterial>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/staticItems"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch_mode"
                tools:visibility="visible"
                >
                <TextView
                    android:id="@+id/lat_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/lat_input_cv"
                    app:layout_constraintTop_toTopOf="@+id/lat_input_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:layout_margin="12dp"
                    android:text="@string/latitude"
                    >
                </TextView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/lat_input_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/lon_inp_cv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="24dp"
                    android:layout_margin="12dp"
                    >
                    <EditText
                        android:id="@+id/latInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="160dp"
                        android:textSize="24sp"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:inputType="phone"
                        android:paddingStart="12dp"
                        tools:ignore="RtlSymmetry"
                        android:backgroundTint="@android:color/transparent"
                        >
                    </EditText>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/lon_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/lon_inp_cv"
                    app:layout_constraintTop_toTopOf="@+id/lon_inp_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:layout_margin="12dp"
                    android:text="@string/longitude"
                    >
                </TextView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/lon_inp_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lat_input_cv"
                    app:layout_constraintBottom_toBottomOf="@id/button_barrier"
                    app:cardCornerRadius="24dp"
                    android:layout_margin="12dp"
                    >
                    <EditText
                        android:id="@+id/lon_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="160dp"
                        android:textSize="24sp"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:inputType="phone"
                        android:paddingStart="12dp"
                        tools:ignore="RtlSymmetry"
                        android:backgroundTint="@android:color/transparent"
                        >
                    </EditText>
                </androidx.cardview.widget.CardView>
                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/button_barrier"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="lon_name, lon_inp_cv"
                    >
                </androidx.constraintlayout.widget.Barrier>
                <Button
                    android:id="@+id/onButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button_barrier"
                    android:text="@string/on"
                    android:textSize="24sp"
                    android:layout_margin="12dp"
                    >
                </Button>
                <Button
                    android:id="@+id/offButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/onButton"
                    app:layout_constraintEnd_toStartOf="@id/autofillButton"
                    app:layout_constraintTop_toBottomOf="@id/button_barrier"
                    android:text="@string/off"
                    android:textSize="24sp"
                    android:layout_margin="12dp"
                    >
                </Button>
                <Button
                    android:id="@+id/autofillButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button_barrier"
                    android:text="@string/autofill"
                    android:textSize="24sp"
                    android:layout_margin="12dp"
                    >
                </Button>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/routeItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/switch_mode"
                android:visibility="gone"
                tools:visibility="gone"
                >
                <TextView
                    android:id="@+id/speedText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/speed_input_cv"
                    app:layout_constraintBottom_toBottomOf="@id/speed_input_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:layout_margin="12dp"
                    android:text="@string/speed"
                    >
                </TextView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/speed_input_cv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/route_button_barrier"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="24dp"
                    android:layout_margin="12dp"
                    >
                    <EditText
                        android:id="@+id/speedInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="128dp"
                        android:textSize="24sp"
                        android:singleLine="true"
                        android:maxLength="3"
                        android:inputType="phone"
                        android:paddingStart="12dp"
                        tools:ignore="RtlSymmetry"
                        android:backgroundTint="@android:color/transparent"
                        >
                    </EditText>
                </androidx.cardview.widget.CardView>
                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/route_button_barrier"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="speedText, speed_input_cv"
                    >
                </androidx.constraintlayout.widget.Barrier>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/onRouteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/route_button_barrier"
                    android:text="@string/on"
                    android:textSize="24sp"
                    android:layout_margin="12dp"
                    >
                </com.google.android.material.button.MaterialButton>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/offRouteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/onRouteButton"
                    app:layout_constraintEnd_toStartOf="@id/pickRouteButton"
                    app:layout_constraintTop_toBottomOf="@id/route_button_barrier"
                    android:text="@string/off"
                    android:textSize="24sp"
                    android:layout_margin="12dp"
                    >
                </com.google.android.material.button.MaterialButton>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pickRouteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/route_button_barrier"
                    android:text="@string/pick"
                    android:textSize="24sp"
                    android:layout_margin="12dp"
                    >
                </com.google.android.material.button.MaterialButton>
                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/picker_result_barrier"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="offRouteButton, onRouteButton, pickRouteButton"
                    >
                </androidx.constraintlayout.widget.Barrier>
                <androidx.cardview.widget.CardView
                    android:id="@+id/selected_cv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/picker_result_barrier"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="24dp"
                    android:layout_margin="12dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    >
                    <TextView
                        android:id="@+id/selected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:padding="12dp"
                        tools:ignore="RtlSymmetry"
                        >
                    </TextView>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>